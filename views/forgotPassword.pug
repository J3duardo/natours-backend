extends base
block content
  main.main
    .login-form.forgot-password-form
      div.ma-bt-lg
        h2.heading-secondary Forgot your password?
        p(style="font-size: 1.5rem") We'll send you an email with instructions to restore your password
      form.form#form--forgot-password
        .form__group
          label.form__label(for='forgot-password-email') Email address
          input#forgot-password-email.form__input(type='email', placeholder='you@example.com', required)
        .form__group
        button.btn.btn--green Submit